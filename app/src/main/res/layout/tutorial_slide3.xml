<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_tutorial">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|center"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:srcCompat="@drawable/slide_tutorial3"
                android:id="@+id/imagemTutorial3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_height="wrap_content"
                android:text="Acompanhe o status dos seus registros de infrações, obtenha métricas de trânsito."
                android:ems="10"
                android:id="@+id/textoTutorial3"
                android:layout_gravity="bottom|center"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#FFFFFF"
                android:layout_width="200dp"
                android:textSize="12sp" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>