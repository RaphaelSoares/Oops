<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_tutorial">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:srcCompat="@drawable/slide_tutorial1"
                android:id="@+id/imagemTutorial1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="top|center" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:text="Fotografe a infração e depois use os filtros e campos de texto para categoriza-lá."
                android:id="@+id/textoTutorial1"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="top|center"
                android:layout_marginTop="170dp" />

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>