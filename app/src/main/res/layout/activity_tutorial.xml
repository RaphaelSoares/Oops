<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="br.com.trihum.oops.TutorialActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom">

        <Button
            android:text="OK, ENTENDI!"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:id="@+id/btnTutorialEntendi"
            android:textColor="#FFFFFF"
            android:layout_gravity="top|center_horizontal"
            android:onClick="onEntendiClick"
            android:visibility="invisible"
            android:background="@drawable/botao_verde_selector" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="30dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_width="wrap_content"
            android:id="@+id/layoutDots"></LinearLayout>

    </FrameLayout>

</FrameLayout>
