            android:paddingTop="1dp"
            android:background="@color/black_overlay"
            android:id="@+id/imgSeparador3"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/txtArea"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:textColor="#000"
            android:textSize="12sp"
            android:hint="Escreva que gostaria de nos dizer..."
            android:inputType="text|textMultiLine"
            android:gravity="top|start"
            android:layout_marginTop="30dp"
            android:background="@drawable/caixa_entrada_area_feedbak"
            android:padding="5dp"
            android:paddingTop="5dp"/>

        <Button
            android:text="ENVIAR"
            android:layout_width="match_parent"
            android:id="@+id/btnFeedbackEnviar"
            android:textColor="#FFFFFF"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/botao_verde_selector"
            android:layout_marginTop="30dp"
            android:layout_height="30dp" />

    </LinearLayout>
</FrameLayout>