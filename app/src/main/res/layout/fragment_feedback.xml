<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E7E8">

    <LinearLayout
        android:id="@+id/layout_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="10dp">

        <!-- ##########  Grupo da Pergunta 1 ###########  -->
        <TextView
            android:id="@+id/txPergunta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qual a sua cor favorita?"
            android:textColor="#000000"
            android:textStyle="normal|bold" />

        <RadioGroup
            android:id="@+id/rgGrupo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <RadioButton
                android:id="@+id/rb1Gr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="muito ruim"
                android:paddingRight="10dp"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:layoutDirection="rtl"
                app:buttonTint="@color/btRadioColor" />
            <RadioButton
                android:id="@+id/rb2Gr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:layoutDirection="rtl"
                app:buttonTint="@color/btRadioColor" />
            <RadioButton
                android:id="@+id/rb3Gr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingRight="10dp"
                android:layoutDirection="rtl"
                app:buttonTint="@color/btRadioColor" />
            <RadioButton
                android:id="@+id/rb4Gr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingRight="10dp"
                android:layoutDirection="rtl"
                app:buttonTint="@color/btRadioColor" />
            <RadioButton
                android:id="@+id/rb5Gr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ótimo"
                android:paddingRight="15dp"
                android:checked="true"
                android:layout_marginLeft="13dp"
                app:buttonTint="@color/btRadioColor"
                android:elevation="24dp" />
        </RadioGroup>

        <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:src="@android:drawable/divider_horizontal_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:background="@color/black_overlay"
            android:id="@+id/imgSeparador1"
            android:layout_marginTop="12dp" />

        <!-- ##########  Grupo da Pergunta 2 ###########  -->

        <TextView
            android:id="@+id/txPergunta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
